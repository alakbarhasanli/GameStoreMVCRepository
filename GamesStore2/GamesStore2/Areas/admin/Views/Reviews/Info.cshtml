@model Reviews
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Games Table</h4>
                        <p class="card-description">
                            <a class="btn btn-primary mr-2" asp-action="Index">Go Back</a>
                            <a class="btn btn-warning mr-2" style="color:#fff;" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                            <a class="btn btn-danger mr-2 asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Review Description</th>
                                        <th>GameId</th>


                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td>@Model.Id</td>
                                        <td>@Model.Description</td>
                                        <td>@Model.GameId</td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
